<mvc:View
	controllerName="com.myorg.myapp.controller.Main"
	displayBlock="true"
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:core="sap.ui.core"
	core:require="{
		formatter: 'com/myorg/myapp/model/formatter'
	}">

	<Page
		title="{i18n>appTitle}"
		id="page">
		
		<content>
		<Table id="odataTable" inset="false" items="{/Products}">
			<headerToolbar>
			<Toolbar>
			<Title text="Product List"/>
			</Toolbar>
			</headerToolbar>
			
			<columns>
			<Column >
			<header>
			<Label text="ProductName"></Label>
			</header>
			</Column>
			<Column >
			<header>
			<Label text="Quantity Per Unit"></Label>
			</header>
			</Column>
			<Column >
			<header>
			<Label text="Unit Price"></Label>
			</header>
			</Column>
			</columns>
			<items>
			<ColumnListItem >
			<Text text="{ProductName}"></Text>
			<Text text="{QuantityPerUnit}"></Text>
			<Text text="{UnitPrice}"></Text>
			</ColumnListItem>
			</items>
			</Table>
		</content>
	</Page>

</mvc:View>
